<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="12sp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="13sp"
        android:src="@drawable/img_community_child_comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginTop="9sp"
            android:background="@color/main_grey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="2sp"
                android:paddingVertical="5sp">

                <TextView
                    android:id="@+id/Item_Community_Detail_Child_Nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임111"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:fontFamily="@font/main_font_sb"
                    android:lineSpacingExtra="3.3sp"/>

                <TextView
                    android:id="@+id/Item_Community_Detail_Child_Comment_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:gravity="center"
                    android:text="2023.03.20"
                    android:textSize="13sp"
                    android:textColor="@color/main_grey"
                    android:fontFamily="@font/main_font_m"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Item_Community_Detail_Child_Comment_Contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="테스트 댓글 입니다다다다다 테스트 댓글 입니다다다다다테스트 댓글 입니다다다다다테스트 댓글 입니다다다다다"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font_eb"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp">

                    <TextView
                        android:id="@+id/Item_Community_Detail_Child_TextBtn_Report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="20sp"
                        android:text="신고하기"
                        android:textSize="13sp"
                        android:textColor="@color/main_grey"
                        android:fontFamily="@font/main_font_l"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/Item_Community_Detail_Child_TextBtn_Edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="20sp"
                        android:text="수정하기"
                        android:textSize="13sp"
                        android:textColor="@color/main_grey"
                        android:fontFamily="@font/main_font_l"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>