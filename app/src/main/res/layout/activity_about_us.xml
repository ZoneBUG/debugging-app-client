<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.aboutus.AboutUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_AboutUs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="5sp"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Toolbar_AboutUs_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"
            android:text="About Us"
            android:textSize="25sp"
            android:fontFamily="@font/main_font_sb"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/AboutUs_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="45sp">

        <LinearLayout
            android:id="@+id/AboutUs_Container_AboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="30sp"
            android:padding="20sp"
            android:background="@drawable/custom_container_main_tips">

            <TextView
                android:id="@+id/AboutUs_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="디버깅은 이런 서비스에요 !"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font_b" />

            <TextView
                android:id="@+id/AboutUs_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="디버깅은 24시간 매장을 지키는 기기를 통해 해충 현황 정보를 수집한 후, 이를 AI 모델로 분석하여 매장별 맞춤 방역 솔루션을 제공하는 서비스입니다!\n\n매장에서 발견된 해충의 종류, 해충이 이동한 경로를 한 장의 보고서 형태로 제공해드리고 있습니다. \n\n보고서에는 해당 해충의 방역을 위한 체크리스트도 함께 확인할 수 있어요! "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font_l"
                android:lineSpacingExtra="3.3sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/AboutUs_Btn_Charge"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="20sp"
                android:background="@drawable/custom_button_grey">

                <TextView
                    android:id="@+id/AboutUs_Btn_Charge_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_font_b"
                    android:gravity="center"
                    android:paddingLeft="30sp"
                    android:paddingRight="10sp"
                    android:text="요금제 안내"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="right"
                    android:src="@drawable/img_logo_transparent" />

            </LinearLayout>


