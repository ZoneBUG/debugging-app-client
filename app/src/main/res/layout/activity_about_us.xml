            <LinearLayout
                android:id="@+id/AboutUs_Btn_FAQ"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="20sp"
                android:background="@drawable/custom_button_grey">

                <TextView
                    android:id="@+id/AboutUs_Btn_FAQ_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_font_b"
                    android:gravity="center"
                    android:paddingLeft="30sp"
                    android:paddingRight="10sp"
                    android:text="문의 및 FAQ"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="right"
                    android:src="@drawable/img_logo_transparent" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

