<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="2sp"
        android:paddingVertical="5sp">

        <TextView
            android:id="@+id/Item_Community_List_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="테스트 제목 입니다다다다다"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font_b"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Item_Community_List_Nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="닉네임111"
            android:textSize="13sp"
            android:textColor="@color/main"
            android:fontFamily="@font/main_font_sb"
            android:lineSpacingExtra="3.3sp"/>

        <TextView
            android:id="@+id/Item_Community_List_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="03/27"
            android:textSize="13sp"
            android:textColor="@color/main_grey"
            android:fontFamily="@font/main_font_m"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_marginTop="9sp"
        android:background="@color/main_grey2" />

</LinearLayout>