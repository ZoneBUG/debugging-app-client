<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_Main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Toolbar_Main_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:lineSpacingExtra="3.3sp"
            android:layout_gravity="center_horizontal"
            android:text="디버깅"
            android:textSize="25sp"
            android:fontFamily="@font/main_font_sb"/>

        <ImageButton
            android:id="@+id/Main_ImgBtn_MyPage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="15sp"
            android:background="@drawable/img_main_mypage" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/Main_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="45sp">

        <LinearLayout
            android:id="@+id/Main_Container_Tips"
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="10sp"
            android:padding="20sp"
            android:background="@drawable/custom_container_main_tips">

            <TextView
                android:id="@+id/Main_Tips_Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="|  오늘의 존버 Tip"
                android:textSize="13sp"
                android:fontFamily="@font/main_font_l"/>

            <TextView
                android:id="@+id/Main_Tips_Text_Tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="음식물 쓰레기를 잘 밀봉했나요?"
                android:textSize="20sp"
                android:fontFamily="@font/main_font_eb" />

            <TextView
                android:id="@+id/Main_Tips_Text_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7sp"
                android:text="음식물은 바퀴벌레가 가장 좋아하는 먹이입니다.\n 그때그때 치워야 바퀴벌레를 예방할 수 있어요!"
                android:textSize="12sp"
                android:fontFamily="@font/main_font_b" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Main_Btn_Report"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="20sp"
            android:background="@drawable/custom_button_red">

            <TextView
                android:id="@+id/Main_Btn_Report_Title"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30sp"
                android:paddingRight="10sp"
                android:text="우리 가게 보고서"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main_font_b" />

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="right"
                android:src="@drawable/img_logo_transparent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Main_Btn_Search"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="20sp"
            android:background="@drawable/custom_button_yellow">

            <TextView
                android:id="@+id/Main_Btn_Search_Title"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30sp"
                android:paddingRight="10sp"
                android:text="이 벌레 뭐지 ?"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main_font_b" />

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="right"
                android:src="@drawable/img_logo_transparent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Main_Btn_Community"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="20sp"
            android:background="@drawable/custom_button_green">

            <TextView
                android:id="@+id/Main_Btn_Community_Title"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30sp"
                android:paddingRight="10sp"
                android:text="Zone - Talk"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main_font_b" />

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="right"
                android:src="@drawable/img_logo_transparent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Main_Btn_AboutUs"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="20sp"
            android:background="@drawable/custom_button_grey">

            <TextView
                android:id="@+id/Main_Btn_AboutUs_Title"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_weight="1"
                android:fontFamily="@font/main_font_b"
                android:gravity="center"
                android:paddingLeft="30sp"
                android:paddingRight="10sp"
                android:text="디버깅이 궁금해요"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="right"
                android:src="@drawable/img_logo_transparent" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>