<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.search.SearchAfterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Search_After_Container_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="20sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Search_After_Image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="40sp"
                    android:src="@drawable/img_logo"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/Search_After_Text_Type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="바퀴벌레"
                    android:textSize="25sp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/main_font_b" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="설명입니다. 설명입니다. 설명입니다. 설명입니다. 설명입니다. 설명입니다. 설명입니다. 설명입니다."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/main_font_l"
                        android:lineSpacingExtra="2.4sp" />

                </ScrollView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>