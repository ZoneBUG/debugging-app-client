<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".activity.login.LoginActivity">

    <ImageView
        android:id="@+id/Login_Img_Dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:scaleType="fitCenter"
        android:background="@drawable/img_splash_dots" />

    <ImageView
        android:id="@+id/Login_Img_Logo"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:src="@drawable/img_logo" />

    <TextView
        android:id="@+id/Login_Text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:text="로그인"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/main_red"
        android:fontFamily="@font/main_font_l"/>

    <LinearLayout
        android:id="@+id/Login_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <EditText
            android:id="@+id/Login_Input_Email"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:layout_marginVertical="5sp"
            android:paddingHorizontal="20sp"
            android:background="@drawable/custom_input"
            android:hint="이메일"/>

        <EditText
            android:id="@+id/Login_Input_Pw"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:paddingHorizontal="20sp"
            android:background="@drawable/custom_input"
            android:hint="비밀번호"
            android:inputType="textPassword"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Login_Button"
            android:layout_width="270sp"
            android:layout_height="45sp"
            android:layout_marginVertical="3sp"
            android:background="@drawable/custom_button_red"
            android:text="로그인하기"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="@font/main_font_b"/>

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/Login_Button_Kakao"-->
<!--            android:layout_width="270sp"-->
<!--            android:layout_height="45sp"-->
<!--            android:layout_marginVertical="3sp"-->
<!--            android:background="@drawable/custom_button_yellow"-->
<!--            android:text="카카오로 로그인하기"-->
<!--            android:textSize="17sp"-->
<!--            android:textColor="@color/white"-->
<!--            android:fontFamily="@font/main_font_b"/>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Login_Button_Naver"
            android:layout_width="270sp"
            android:layout_height="45sp"
            android:layout_marginVertical="3sp"
            android:background="@drawable/custom_button_green"
            android:text="네이버 아이디로 로그인"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="@font/main_font_b"/>

        <LinearLayout
            android:id="@+id/Login_Container_Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/Login_Text_Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginHorizontal="20sp" />

            <TextView
                android:id="@+id/Login_Text_FindPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기" />

        </LinearLayout>

    </LinearLayout>






</LinearLayout>