<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zonebug.debugging">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/img_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Debugging"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.community.write.CommunityWriteActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true" />
        <activity
            android:name=".activity.community.list.CommunityListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.community.detail.CommunityDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.mypage.MyPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.search.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".activity.report.ReportActivity"
            android:exported="true" />
        <activity
            android:name=".activity.community.main.CommunityActivity"
            android:exported="true" />
        <activity
            android:name=".activity.aboutus.AboutUsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>